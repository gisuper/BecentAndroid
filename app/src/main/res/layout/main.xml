<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="start anim"
            />

    <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="cancel anim"
            />
    <TextView
            android:id="@+id/tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:background="#ffff00"
            android:text="Hello qijian"/>

    <com.yangxiong.gisuper.myapplication.anim.MyPointView
            android:id="@+id/pointview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_below="@id/tv"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="11"
        style="?android:attr/horizontalScrollViewStyle"
        android:progressDrawable="@drawable/star_big_1"
        android:id="@+id/progressBarLarge"/>
    <com.yangxiong.gisuper.myapplication.widget.CircleProgress
        android:id="@+id/cp_loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />

</RelativeLayout>

